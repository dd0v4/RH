{% extends "../layouts/base.twig" %}

{% block title %}
    <title>{{title}}</title>
{% endblock %}

{% block main %}

<main>
    <form action="" method="post">
        <h3>Name</h3>
        <input type="text" name="name" id="name" value="{{user.name}}">
        <h3>Photo</h3>
        <input type="text" name="photo" id="photo" value="{{user.photo}}">
        <h3>Function</h3>
        <input type="text" name="function" id="function" value="{{user.function}}">
        <h3>Blames</h3>
        <input type="number" name="blame" value="0"><br>
        <button type="submit">Edit</button>
        {% if success %}
            <p>User successfully edited</p>
        {% endif %}
        
    </form>
</main>
{% endblock %}